{
    "charset":"utf8",

    "database":{
        "host":"localhost",
        "port":27017,
        "user":"root",
        "password":"tester",
        "name":"neutrino",
        "options":{},
        "serverOptions":{}
    },

    "master":{
        "httpPort":8080,
        "eventServicesFolder":"./eventServices"
    },

    "worker":{
        "host":"localhost",
        "port":"50888",
        "loadSendInterval":60000
    },

    "mvc":{
        "modelsFolder_":"./models",
        "controllersFolder_":"./controllers",
        "viewsFolder_":"./views"
    },

    "eventBus":{
        "serverAddress":"localhost",
        "serverPort":50777,
        "reconnectInterval":5000,
        "masterSecret":"masterSecret",
        "workerSecret":"workerSecret"
    },

    "sessions":{
        "sessionCollectionName":"sessions",
        "sessionExpiredMinutes":60
    },

    "logger":{
        "levels":"debug+error+warn+trace",
        "debug":"./logs/%pid_debug_%y-%m-%d.log",
        "error":"./logs/%pid_error_%y-%m-%d.log",
        "warn":"./logs/%pid_warn_%y-%m-%d.log",
        "trace":"./logs/%pid_trace_%y-%m-%d.log"
    }
}