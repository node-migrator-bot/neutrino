{
    "charset":"utf8",

    "database":{
        "host":"localhost",
        "port":27017,
        "user":"root",
        "password":"tester",
        "name":"neutrino",
        "options":{},
        "serverOptions":{}
    },

    "master":{
        "httpPort":8080,
        "clientScriptFolder":"./client.min",
        "eventServicesFolder":"./eventServices"
    },

    "worker":{
        "host":"localhost",
        "port":null,
        "loadSendInterval":60000
    },

    "mvc":{
        "modelsCollectionName":"models",
        "modelsFolder":"./models",
        "controllersFolder_":"./controllers",
        "viewsFolder":"./views"
    },

    "eventBus":{
        "serverAddress":"localhost",
        "serverPort":50777,
        "reconnectInterval":5000,
        "masterSecret":"masterSecret",
        "workerSecret":"workerSecret",
        "tls":{
            "enabled":false,
            "keyPath":"./tlskey/neutrino-key.pem",
            "certPath":"./tlskey/neutrino-cert.pem",
            "requestCert":false,
            "caPaths":[]
        }
    },

    "sessions":{
        "collectionName":"sessions",
        "expiredTimeout":3600000,
        "checkExpiredInterval":300000
    },

    "logger":{
        "levels":"debug+error+warn+trace+info",
        "debug":"./logs/%pid_debug_%y-%m-%d.log",
        "error":"./logs/%pid_error_%y-%m-%d.log",
        "warn":"./logs/%pid_warn_%y-%m-%d.log",
        "trace":"./logs/%pid_trace_%y-%m-%d.log",
        "info":"./logs/%pid_info_%y-%m-%d.log"
    }
}